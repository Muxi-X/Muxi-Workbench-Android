<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_progress_title_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#ffffff"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spn_progress_title_bar_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal|center"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_progress_title_bar_option"
        android:layout_width="11dp"
        android:layout_height="5dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        android:src="@drawable/drop_down_arrow"
        app:layout_constraintStart_toEndOf="@id/spn_progress_title_bar_option"
        app:layout_constraintTop_toTopOf="@+id/spn_progress_title_bar_option" />


    <TextView
        android:id="@+id/tv_progress_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度"
        android:textColor="#FF212121"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/ib_progress_title_bar_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="29dp"
        android:background="#ffffff"
        android:contentDescription="Add New Progress"
        android:scaleType="centerCrop"
        android:src="@drawable/add_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
